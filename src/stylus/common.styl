// tab表格
.tab-wrapper {
    width: 100%;
    border: 1px solid #eee;
    border-bottom: none;

    .row {
        min-height: 40px;
        border-bottom: 1px solid #eee;
        display: flex;

        .item {
            flex: 1;
            display: flex;
            border-right: 1px solid #eee;
            font-size: 13px;

            .label {
                display: flex;
                align-items: center;
                justify-content: flex-end;
                padding: 0 10px;
                flex: 0 0 120px;
                border-right: 1px solid #eee;
                color: #17233d;
                background: #f9f9f9;

                i {
                    margin-right: 5px;
                    font-size: 14px;
                    color: #17233d;
                }
            }

            .text {
                flex: 1;
                padding: 0 10px;
                display: flex;
                align-items: center;
                color: #515a6e;
            }
        }

        .item:nth-last-child(1) {
            border-right: none !important;
        }
    }
}

.tab-title {
    margin: 30px 0 10px 0;
    height: 40px;
    padding: 0 10px;
    border-bottom: 1px solid #eee;
    width: 100%;
    font-size: 16px;
    color: #17233d;
    display: flex;
    justify-content: flex-start;
    align-items: center;

    i {
        margin-right: 6px;
        color: #515a6e;
    }

    span {
        color: #515a6e;
    }
}

