
.handle-container {
    display: flex;
    justify-content: space-between;
    padding-bottom: 10px;

    .search-wrapper {
        display: flex;
        flex: 1;

        .search-form {
            text-align: left;

            .ivu-form-item {
                margin-bottom: 15px !important;
            }
        }

        .btns {
            flex: 0 0 180px;
            padding-left: 20px;
            box-sizing: border-box;
        }
    }
}

.page-wrapper {
    padding-top: 10px;
    position: relative;
    text-align: center;
}

.danger-color {
    color: #ed4014;
}

.title-color {
    color: #17233d;
}

.info-color {
    color: #2db7f5;
}

.success-color {
    color: #19be6b;
}

.warning-color {
    color: #ff9900;
}

.ivu-card .page-wrapper {
    font-size: 12px;
}

.win-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 10px;
    overflow: auto;
    display: flex;
    flex-flow: column;

    .win-table-wrapper {
        flex: 1;
        overflow: auto;
    }
}

.handle-br {
    display: block !important;
    z-index: 999999;
    bottom: 0;
    right: 0;
    background: none;
    border: none;
}

